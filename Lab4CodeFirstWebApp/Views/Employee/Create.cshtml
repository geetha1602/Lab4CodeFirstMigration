@model Lab4CodeFirstWebApp.Models.EmployeeViewModel;

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Add Employee
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="EmpName">Emp Name</label>
                        <input type="text" asp-for="EmpName" class="form-control" placeholder="Enter Employee Name" />
                        <span asp-validation-for="EmpName" class="text-danger">@TempData["ErrorMessage"]</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address">Address</label>
                        <input type="text" asp-for="Address" class="form-control" placeholder="Enter Address" />
                        <span asp-validation-for="Address" class="text-danger">@TempData["ErrorMessage"]</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Salary">Salary</label>
                        <input type="text" asp-for="Salary" class="form-control" placeholder="Enter Salary" />
                        <span asp-validation-for="Salary" class="text-danger">@TempData["ErrorMessage"]</span>
                    </div>
                    <div class="form-group">
                    
                        <label asp-for="UploadImage"></label>
                        <input type="file" asp-for="UploadImage" class="form-control" />
                        <span asp-validation-for="UploadImage" class="text-danger">@TempData["ErrorMessage"]</span>
                        
                    </div>
                   
                    <div class="form-group">
                        <label asp-for="DepartmentId">Department</label>
                        <select asp-for="DepartmentId" class="form-control" asp-items=@ViewBag.Department>
                            <option>--Select Department--</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger">@TempData["ErrorMessage"]</span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-primary float-right" style="margin-top:10px">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
     <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
